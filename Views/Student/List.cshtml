@model List<MVC_Dependency.Models.Student>
@using MVC_Dependency.Services

@{ 
    ViewData["Title"] = "Список студентов";
}

@inject IStudentService service

<style>
    table, td {
        border: 1px solid black;
    }
    td {
        padding: 5px;
    } 
</style>
<div style="margin-top: 20px">
    <hr />
    <table cellpadding="10">
        <tr><td>Id</td><td>Name</td><td>Surname</td><td>Group Id</td><td>Status</td><td></td><td></td></tr>
        @foreach (var item in Model)
        {
            if (item.Id > -1)
            {
                <tr><td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.GroupId</td>
                <td>@item.Status</td>
                <td><a href="@Url.Action("Edit", "Student", new { num = @item.Id })">Редактировать</a></td>
                <td><a href="@Url.Action("Remove", "Student", new { studentId = @item.Id })">Удалить</a></td></tr>
            }
        }
    </table>
</div>